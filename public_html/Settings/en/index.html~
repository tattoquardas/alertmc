        <script>
             var app = angular.module("indexApp", []);
             app.controller("indexController", function($scope, $http){
		$scope.hostURL='http://localhost:3000/';
		$scope.subscribe = function(){
			var newSubscr = {"firstName" : $scope.firstName, "lastName" : $scope.lastName, "email" : $scope.email};
			$http.post($scope.hostURL + "DataForSubscribe", newSubscr);
		};
		$http.get($scope.hostURL + "getIndexPageSettings").then(
			function(response){
				$scope.dataForCarousel = response.data.carousel;
			}
		);
	});
        </script>
