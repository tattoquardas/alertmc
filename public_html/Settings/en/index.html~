                        <ul class="nav nav-tabs">
                          <li ng-repeat="menuItem in dataForCarousel.menus" ng-class="($index==0) ? 'active' : ''">
                                <a data-toggle="tab" href="#menu{{$index}}">{{menuItem}}</a>
                          </li>
                        </ul>
                        <div class="tab-content">
                            <div ng-repeat="item in dataForCarousel.items" id="menu{{$index}}" class="tab-pane fade" ng-class="($index==0) ? 'in active' : ''">
                                <div class="col-xs-12">
                                    <div class="carousel slide" id="myCarousel{{$index}}">
                                        <div class="carousel-inner">
                                            <div ng-repeat="sld in item.slides" class="item" ng-class="($index==0) ? 'active' : ''">
                                                <ul class="thumbnails">
                                                    <li class="col-sm-3" ng-repeat="i in sld.inst">
                                                        <a href={{i.link}} style="background-color: #FFFFCC"><c><img src={{i.image}} alt="" style="width: 200px;"></c></a>
